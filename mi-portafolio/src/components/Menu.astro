---
import Buttom from './Buttom.astro';
const sections = [
  { id: 'projects', icon: 'code', label: 'Proyectos' },
  { id: 'skills', icon: 'sparkle', label: 'Skills' },
  { id: 'about', icon: 'coffee', label: 'Sobre m√≠' },
  { id: 'contact', icon: 'mail', label: 'Contacto' }
];
---
<div class="flex flex-col md:flex-row p-10 place-content-around gap-5 justify-center items-center ">
  {sections.map(section => (
    <Buttom label={section.label} key={section.id} icon={section.icon}>
    </Buttom>
  ))}
</div>
