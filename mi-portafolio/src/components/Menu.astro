---
import Buttom from './Buttom.astro';
const sections = [
  { id: 'home', icon: 'home', label: 'Home', path:'/' },
  { id: 'projects', icon: 'code', label: 'Proyectos', path:'/projects' },
  { id: 'skills', icon: 'sparkle', label: 'Skills', path:'/skills' },
  { id: 'about', icon: 'coffee', label: 'Sobre m√≠', path:'/about' },
  { id: 'contact', icon: 'mail', label: 'Contacto', path:'/contact' }
];
---
<div class="bg-rose-100 flex flex-col md:flex-row p-10 place-content-around gap-5 justify-center items-center ">
  {sections.map(section => (
    <Buttom label={section.label} key={section.id} icon={section.icon} path={section.path}>
    </Buttom>
  ))}
</div>
