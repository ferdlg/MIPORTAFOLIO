---
const { name, description, link, repo } = Astro.props;
---
<div class="w-40 h-40 bg-white shadow-lg rounded-lg overflow-hidden border border-gray-300 gap-6">
  <div class="bg-rose-500 p-4">
    <h1 class="text-white text-xl font-bold">{name}</h1>
  </div>
  <div class="p-4">
    <p class="text-gray-700 text-base mb-4">{description}</p>
        <div class="flex justify-between">
      {link && (
        <a 
          href={link} 
          target="_blank" 
          class="text-sm text-white bg-blue-500 hover:bg-blue-600 py-2 px-4 rounded transition duration-300">
          Ver Proyecto
        </a>
      )}
      {repo && (
        <a 
          href={repo} 
          target="_blank" 
          class="text-sm text-white bg-gray-700 hover:bg-gray-800 py-2 px-4 rounded transition duration-300">
          Ver Repositorio
        </a>
      )}
    </div>
  </div>
</div>
